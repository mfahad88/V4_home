<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:background="@drawable/bg_fixtures"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/helmet_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <com.psl.fantasy.league.season2.RoundedImageView
                    android:id="@+id/ivUserImage"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/profile_circle" />

                <TextView
                    android:id="@+id/user_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivUserImage"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="erewrewr"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/header_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/top_bg"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txtCartCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout000"
                            android:layout_marginTop="-10dp"
                            android:layout_weight="1"
                            android:background="@drawable/deal_bg"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgBooster"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="false"
                            android:layout_centerInParent="false"
                            android:layout_marginLeft="-13dp"
                            android:paddingTop="5dp"
                            android:src="@drawable/cart" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="right"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/star_field"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.7"
                            android:drawableLeft="@drawable/rank_icon_new"
                            android:gravity="left"
                            android:text=""
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/coin_field"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.3"
                            android:drawableLeft="@drawable/poits_icon_new"
                            android:gravity="left"
                            android:text=""
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/formation_header"

                    android:fontFamily="@font/montserratblack"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Shop"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:translationZ="1dp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView31"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="-20dp"
                    android:background="@drawable/round_corner_bg_new"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnProceed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@+id/layoutUpper"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_bg_small"
                        android:text="Proceed"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layoutUpper"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:clipToPadding="false"
                        android:fillViewport="false"
                        android:visibility="visible">


                        <LinearLayout
                            android:id="@+id/layoutBooster"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="20dp"
                            android:scrollIndicators="none">

                            <LinearLayout
                                android:id="@+id/layoutDeal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/deal_of_day"
                                android:orientation="horizontal"
                                android:visibility="visible" />

                            <LinearLayout
                                android:id="@+id/layout1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/layoutDeal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/shoping_cart_header"
                                android:orientation="horizontal"
                                android:paddingBottom="1dp"
                                android:paddingTop="1dp"
                                android:weightSum="3">

                                <TextView
                                    android:id="@+id/textView19"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"

                                    android:fontFamily="@font/montserratblack"
                                    android:gravity="center"
                                    android:text="Item"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"

                                    android:fontFamily="@font/montserratblack"
                                    android:gravity="center"
                                    android:text="Description"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView30"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_weight="1"

                                    android:fontFamily="@font/montserratblack"
                                    android:gravity="center"
                                    android:text="Price"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>