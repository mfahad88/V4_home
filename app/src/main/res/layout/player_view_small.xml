<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/player_circle_small">

        <ImageView
            android:id="@+id/iv_player"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/orange_bat_smal" />

        <ImageView
            android:id="@+id/iv_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_player"
            android:background="@drawable/green_tick"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_playername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_player"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:textSize="8sp"
            android:textColor="@color/lv_fix_row_title_color"
            android:text="Sarfaraz Ahmed"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_strikerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_playername"
            android:layout_marginTop="-2dp"
            android:textSize="8sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:text="ACL Points:" />

        <TextView
            android:id="@+id/tv_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_strikerate"
            android:layout_centerHorizontal="true"
            android:textColor="@color/lv_fix_row_title_color"
            android:layout_marginTop="-2dp"
            android:text=""
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_average"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:textSize="8sp"
            android:drawableLeft="@drawable/coin_gray"
            android:drawablePadding="3dp"
            android:paddingLeft="3dp"
            android:text="80000"
            android:visibility="gone"/>

