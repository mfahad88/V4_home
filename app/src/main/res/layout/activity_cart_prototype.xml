<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shoping_card_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="7">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/cart_image_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:padding="4dp"
                android:visibility="visible"
                app:srcCompat="@drawable/purple_cap" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtBoosterType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignStart="@+id/txtPoints"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/layout000"
            android:layout_weight="3.5"
            android:text="Item Name"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtItemPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_weight="2"
            android:text="PKR 150"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_weight="0.01"
            android:visibility="gone"
            app:srcCompat="@drawable/minus_icon" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="false"
            android:layout_weight=".07"
            android:background="@drawable/red_dot"
            android:gravity="center"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/layout1"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.01"
            android:visibility="gone"
            app:srcCompat="@drawable/plus_icon" />

        <ImageView
            android:id="@+id/btnDelItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/btnDown"
            android:layout_toStartOf="@+id/btnDown"
            android:layout_weight="0.01"
            android:visibility="gone"
            app:srcCompat="@drawable/delete_icon" />

    </LinearLayout>

</RelativeLayout>