<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fixtures">


    <RelativeLayout
        android:id="@+id/helmet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <com.psl.fantasy.league.season2.RoundedImageView
            android:id="@+id/ivUserImage"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/profile_circle" />

        <TextView
            android:id="@+id/user_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivUserImage"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="erewrewr"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/top_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:weightSum="2"
                android:visibility="visible">

                <TextView
                    android:id="@+id/star_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1.7"
                    android:drawableLeft="@drawable/rank_icon_new"
                    android:gravity="left"
                    android:text="1234"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/coin_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.3"
                    android:drawableLeft="@drawable/poits_icon_new"
                    android:gravity="left"
                    android:text="324324"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/helmet_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/welcome" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome"
            android:layout_marginTop="-50dp"
            android:background="@drawable/helmet_with_circle" />


        <View
            android:id="@+id/dummy_two"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-60dp"
            android:layout_toRightOf="@id/dummy_two"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_field_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@drawable/buil_user_field"

                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/star_field_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/build_star_field"
                android:gravity="center"
                android:text=""
                android:textStyle="bold" />


            <TextView
                android:id="@+id/coin_field_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/star_field_"
                android:layout_alignRight="@id/star_field_"
                android:layout_marginTop="-2dp"
                android:background="@drawable/build_coin_field"
                android:gravity="center"
                android:text=""
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/formation_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helmet_layout"
        android:background="@drawable/formation_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <View
            android:id="@+id/center_view"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/iv_left_formation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/center_view"
            android:background="@drawable/formation_left"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/iv_right_formation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/center_view"
            android:background="@drawable/formation_right"
            android:layout_marginTop="40dp"/>




    </RelativeLayout>

</RelativeLayout>