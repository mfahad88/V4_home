<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:background="@drawable/bg_fixtures"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/helmet_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <com.psl.fantasy.league.season2.RoundedImageView
                    android:id="@+id/ivUserImage"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/profile_circle" />

                <TextView
                    android:id="@+id/user_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivUserImage"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="erewrewr"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/header_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/top_bg"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtremain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout000"
                            android:layout_marginTop="-10dp"
                            android:layout_weight="1"
                            android:background="@drawable/deal_bg"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgBooster"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="false"
                            android:layout_centerInParent="false"
                            android:layout_marginLeft="-10dp"
                            android:paddingTop="5dp"
                            app:srcCompat="@drawable/cart_total_icon" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/star_field"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.7"
                            android:drawableLeft="@drawable/rank_icon_new"
                            android:gravity="left"
                            android:text=""
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/coin_field"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.3"
                            android:drawableLeft="@drawable/poits_icon_new"
                            android:gravity="left"
                            android:text=""
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/formation_header"
                    
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Selected Items"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:translationZ="1dp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView11"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="-20dp"
                    android:background="@drawable/bg_rounded"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/shoping_cart_header"
                        android:orientation="horizontal"
                        android:paddingBottom="1dp"
                        android:paddingTop="1dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            
                            android:gravity="center"
                            android:text="Item"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            
                            android:gravity="center"
                            android:text="Price"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            
                            android:gravity="center"
                            android:text="QTY"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/layout1"
                        android:layout_marginTop="5dp"
                        android:scrollIndicators="none"
                        android:scrollbarAlwaysDrawHorizontalTrack="false"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/layoutBooster"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="20dp"
                                android:scrollIndicators="none">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/cart_total_bg"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:weightSum="3">

                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        app:srcCompat="@drawable/cart_total_icon">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/txtBoosterType"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="false"
                                        android:layout_alignStart="@+id/txtPoints"
                                        android:layout_marginLeft="10dp"
                                        android:layout_toRightOf="@+id/layout000"
                                        android:layout_weight="1.3"
                                        
                                        android:text="Total"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txtTotalPrice"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="false"
                                        android:layout_weight="1.2"
                                        
                                        android:text="PKR 750"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/editLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/button4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/btn_bg_small"
                                        android:text="Edit Items"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                    <Button
                                        android:id="@+id/button5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/btn_bg_small"
                                        android:text="Purchase"
                                        android:textColor="@color/white"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/okCancelLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/editLayout"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btn_ok"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/btn_bg_small"
                                        android:text="@android:string/ok"
                                        android:textColor="@color/white"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/btn_cancel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/btn_bg_small"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:text="Undo Delete"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>